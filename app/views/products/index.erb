<%= form_tag '/', method: :post, class: "navbar-form navbar-left search-form" do %>
  <%= text_field_tag(
      :product,
      params[:product],
      class: "form-control"
  ) %>
  <%= submit_tag "add to cart" %>
<% end %>

<ol>
  <% if session[:cart] %>
    <% session[:cart].each do |item| %>
      <li><%= item %></li>
    <% end %>
  <% end %>
</ol>
